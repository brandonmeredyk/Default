    public void LoadTiles(){
        
        int t;
        
        Object[] keyset = _images.keySet().toArray();
        
        for(int y = 0; y < 50; y++)
        {
            t = y % _images.size();
            for(int x = 0; x < 50; x++)
            {
                if(t >= _images.size()){t = 0;}
                
                _tiles[x][y] = new Tile(x,y, _images.get(keyset[t]));
                t++;
                
            }
        }
    }
    
    private void Save(String fileLocation){
    
        try{
            FileWriter fstream = new FileWriter(fileLocation);
            BufferedWriter out = new BufferedWriter(fstream);
            
            out.write("<PROPERTIES>");
            out.write("<SIZE>");
            
            out.write("</SIZE>");
            
            out.write("</PROPERTIES>");
            
            out.write("<TILES>");
            
            for( Tile[] t : _tiles)
            {
                for (Tile s : t)
                {
                    out.write(s._type);
                }
                
            }
            
            out.write("</TILES>");
            
            //Close the output stream
            out.close();
        }
        catch(Exception e)
        {
            System.out.println("Save Failed");
        }
    
    }
    
    private void startGameLoop(){
     
        new Thread(this).start();

    }
    
    
    private void RenderTiles(Graphics2D g){
    
        for(Tile[] t : _tiles)
        {
           for(Tile s : t)
            {
                s.draw(g);

            } 
        }
    }
    
    public void draw(Graphics2D g){
        
        //Transform and Scale draw here
        //graphics.getTransform();
        
        RenderTiles(g);
        
        for(Drawable d : _things)
        {
            d.draw(g);
        }
        
        if(_debug)
        {
            _debugWindow.draw(g);
           
        }
        
    }
    
